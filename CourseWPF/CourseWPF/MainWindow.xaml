<Window x:Class="CourseWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWPF"
        mc:Ignorable="d"
        Height="600" Width="1200" Title="CourseWorkGUI-v1 - Kevin Wang" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="textBoxGrade" IsReadOnly="True" Height="23" Margin="446,126,266,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalContentAlignment="Stretch"/>
        <TextBox x:Name="textBoxCategoryName" IsReadOnly="True" Height="23" Margin="446,93,266,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalContentAlignment="Stretch"/>
        <TextBox x:Name="textBoxAssignmentName" IsReadOnly="True" Height="23" Margin="446,62,266,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalContentAlignment="Stretch"/>
        <Label Content="Assignment Name" HorizontalAlignment="Left" Margin="294,62,0,0" VerticalAlignment="Top" Width="132"/>
        <Label Content="Category Name" HorizontalAlignment="Left" Margin="294,93,0,0" VerticalAlignment="Top" Width="115"/>
        <Label Content="Grade" HorizontalAlignment="Left" Margin="294,126,0,0" VerticalAlignment="Top" Width="52"/>
        <ListBox x:Name="listBoxGrade" HorizontalAlignment="Left" Height="472" Margin="10,61,0,0" VerticalAlignment="Top" Width="254"/>
        <Label Content="Submissions" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="132"/>
        <Menu Margin="0,0,0,0" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Import">
                <MenuItem Header="Import Course Work from JSON File" Click="ImportJSON_Click"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="About_Click"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
